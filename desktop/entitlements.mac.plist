<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for Electron / V8 JIT compilation -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <!-- Required for Electron's renderer process (V8 needs unsigned memory) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- Required for Electron to load native modules like better-sqlite3 -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <!-- Required for WebSocket connections to relay server -->
    <key>com.apple.security.network.client</key>
    <true/>
    <!-- Required for local OpenClaw RPC server communication -->
    <key>com.apple.security.network.server</key>
    <true/>
    <!-- Required to read Claude/OpenAI log files for AI usage tracking -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
